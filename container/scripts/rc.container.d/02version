# Get official giturl for scripts
(cd ${ZDHOME}/ZonamaContainer/;curl -G -s "http://downloads.zonamaserver.org/zonamacontainer/giturl.txt" --data-urlencode "x-ztype=zc" --data-urlencode "x-zcupdate=rc.fasttrack" --data-urlencode "x-uuid=$(</proc/sys/kernel/random/boot_id)" --data-urlencode "x-version=$(cat /.swgemudev.version)" --data-urlencode "x-zc-version=$(git describe --tag)" --data-urlencode "x-zc-repo=$(git ls-remote --get-url)" --data-urlencode "x-zc-branch=$(git rev-parse --abbrev-ref HEAD)" --data-urlencode "x-id=$(cat /etc/machine-id)") 2> /dev/null > /.swgemudev.giturl
